<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ViTri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vị trí"
                android:gravity="left"
                android:paddingVertical="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>
            <Button
                android:id="@+id/CuaSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cửa sông"
                android:gravity="left"
                android:paddingVertical="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>
            <Button
                android:id="@+id/Tram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạm"
                android:gravity="left"
                android:paddingVertical="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>
            <Button
                android:id="@+id/DuBao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian dự báo"
                android:gravity="left"
                android:paddingVertical="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <Button
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:layout_gravity="center"
                android:id="@+id/XemDuBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem dự báo"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/donvi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

            <LinearLayout
                android:id="@+id/xem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/man"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/man"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Các thành phần bên trái -->
                        <TextView
                            android:id="@+id/mantram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sơn Đốc" />

                        <TextView
                            android:id="@+id/mancuasong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Hàm Luông)" />

                        <!-- Thêm các thành phần khác nếu cần -->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/mancua"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="95 km" />



                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="end"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/mandoman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.3 g/l"
                            android:drawablePadding="5dp"
                            android:drawableEnd="@drawable/baseline_keyboard_double_arrow_up_24"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giải pháp ứng phó mặn"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/gia2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ten1"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phủ bạt nước ngọt"
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:paddingLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi phí ước tính: 10.000.000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right">

                        <Button
                            android:id="@+id/gp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="0dp"
                            android:text="Sử dụng"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ten10"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sử dụng bạt phủ đất"
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:paddingLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi phí ước tính: 20.000.000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/gp10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Sử dụng"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:padding="0dp"/>


                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingHorizontal="5dp"
                    android:paddingBottom="0dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ten4"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sử dụng giống chịu mặn"
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:paddingLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi phí ước tính: Tùy loại giống"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/gp4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Sử dụng"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:padding="0dp"/>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/xemthem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Xem thêm >"
                    android:textColor="@color/colorPrimary"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</LinearLayout>
