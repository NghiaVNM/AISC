<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChinhSuaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <ImageButton
                        android:id="@+id/profileButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="15dp"
                        android:src="@drawable/baseline_person_24"
                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nông dân: Nguyễn Văn A"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textSize="18dp"
                    android:paddingBottom="10dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Bến Tre"
                    android:textColor="@color/black"
                    android:background="@drawable/diachi"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="15dp"/>

                <TextView
                    android:paddingTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giống canh tác"
                    android:textSize="18dp"
                    android:paddingBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/diachi"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tôm sú nước lợ             "
                            android:textSize="15dp"
                            android:gravity="left"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lich"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="          21/8/2023"
                            android:textSize="15dp"
                            android:gravity="left"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bo"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/diachi"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lúa OM6976                  "
                            android:textSize="15dp"
                            android:gravity="left"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lich"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="          15/7/2023"
                            android:textSize="15dp"
                            android:gravity="left"
                            android:textStyle="bold"/>
                    </LinearLayout>



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bo"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:id="@+id/after"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/diachi"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lúa ST25                        "
                            android:textSize="15dp"
                            android:gravity="left"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lich"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="           1/1/2023"
                            android:textSize="15dp"
                            android:gravity="left"
                            android:textStyle="bold"/>
                    </LinearLayout>



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bo"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <Button
                    android:id="@+id/btthem"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/donvi"
                    android:text="Thêm giống"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:id="@+id/them"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:visibility="gone">
                    <Button
                        android:id="@+id/Loai"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Loại"
                        android:gravity="left"
                        android:paddingVertical="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>
                    <Button
                        android:id="@+id/Giong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giống"
                        android:gravity="left"
                        android:paddingVertical="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mật độ" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>

                    <Button
                        android:id="@+id/themgiong"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:text="Thêm"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/donvi"
                        android:layout_gravity="right"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <Button
                    android:id="@+id/luu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu thay đổi"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>