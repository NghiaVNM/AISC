<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#40000000" /> <!-- Màu của bóng -->
        </shape>
    </item>

    <!-- Rounded rectangle -->
    <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/white" /> <!-- Màu của hình chữ nhật -->
        </shape>
    </item>
</layer-list>
